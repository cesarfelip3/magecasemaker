    </sales_order_view>
    <customer_account>       
        <reference name="customer_account_navigation">          
            <action method="addLink" translate="label" module="pdp">
                <name>viewpdp</name>
                <path>pdp/pdptemplate/view</path>
                <label>My Custom T-Shirts</label>
            </action>
        </reference>
    </customer_account>  
 
    <pdp_pdptemplate_view>
