<?xml version="1.0"?>
<layout version="0.1.0">
    <pdp_view_index>
        <label>Custom Design</label>
        <reference name="head" >
            <action method="addJs" ifconfig="pdp/setting/enable" >
                <script>pdp/js/jquery-1.10.2.min.js</script>
            </action>

            <action method="addJs" ifconfig="pdp/setting/enable" >
                <script>pdp/js/farbtastic.js</script>
            </action>
            <action method="addJs" ifconfig="pdp/setting/enable" >
                <script>pdp/js/fabric.js</script>
            </action>
            <action method="addJs" ifconfig="pdp/setting/enable" >
                <script>pdp/js/owl.carousel.js</script>
            </action>
            <action method="addJs" ifconfig="pdp/setting/enable" >
                <script>pdp/js/jquery.waitforimages.js</script>
            </action>
            <action method="addJs" ifconfig="pdp/setting/enable" >
                <script>pdp/js/design.js</script>
            </action>
            <action method="addJs" ifconfig="pdp/setting/enable" >
                <script>pdp/js/jquery.colorbox.js</script>
            </action>
            <action method="addJs" ifconfig="pdp/setting/enable" >
                <script>pdp/js/jquery.nouislider.js</script>
            </action>
            <action method="addJs" ifconfig="pdp/setting/enable" >
                <script>pdp/js/paging.js</script>
            </action>
            <action method="addJs" ifconfig="pdp/setting/enable" >
                <script>pdp/js/stickytooltip.js</script>
            </action>
            <!--
            <action method="addJs" ifconfig="pdp/setting/enable" ><script>pdp/js/facebook_img.js</script></action>
            -->
            <!--
            <action method="addJs" ifconfig="pdp/setting/enable" ><script>pdp/js/jquery.tipsy.js</script></action>
            -->
            <action method="addItem" ifconfig="pdp/setting/enable" >
                <type>js_css</type>
                <name>pdp/css/styles.css</name>
            </action>
            <action method="addItem" ifconfig="pdp/setting/enable" >
                <type>js_css</type>
                <name>pdp/css/colorbox.css</name>
            </action>
            <action method="addItem" ifconfig="pdp/setting/enable" >
                <type>js_css</type>
                <name>pdp/css/owl.carousel.css</name>
            </action>
            <action method="addItem" ifconfig="pdp/setting/enable" >
                <type>js_css</type>
                <name>pdp/css/pi-awesome.css</name>
            </action>
            <action method="addItem" ifconfig="pdp/setting/enable" >
                <type>js_css</type>
                <name>pdp/css/jquery.nouislider.css</name>
            </action>
            <action method="addItem" ifconfig="pdp/setting/enable" >
                <type>js_css</type>
                <name>pdp/css/farbtastic.css</name>
            </action>
            <action method="addItem" ifconfig="pdp/setting/enable" >
                <type>js_css</type>
                <name>pdp/css/stickytooltip.css</name>
            </action>


        </reference>
        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
            <action method="setHeaderTitle" translate="title" module="pdp">
                <title>Custom Design</title>
            </action>
        </reference>
        <reference name="content">
            <block type="core/template" name="default.setting" template="pdp/default_setting.phtml" />
            <block type="core/template" name="default.tooltip" template="pdp/tooltip.phtml" />
            <block type="pdp/pdp" name="pdp_custom_design" template="pdp/t-shirt.phtml" />
        </reference>
    </pdp_view_index>
